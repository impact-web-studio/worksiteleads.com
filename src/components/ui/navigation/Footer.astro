---
import Logo from '@/components/ui/media/LogoImage.astro';

const footerLinks = [
	{
		name: 'home',
		href: '/',
	},
	{
		name: 'About',
		href: '/',
	},
	{
		name: 'Services',
		href: '/services',
	},
	{
		name: 'Who We Help',
		href: 'who-we-help',
	},
	{
		name: 'Contact',
		href: '/contact',
	},
	{
		name: 'Schedule a Call',
		href: '/schedule-a-call',
	},
];

const companyInfo = [
	{
		name: 'hours',
		value: '24/7',
	},
	{
		name: 'number',
		value: '+1 (123) 123-1234',
	},
	{
		name: 'email',
		value: 'contact@worksiteleads.com',
	},
];

const { footerText } = Astro.props;
---

<footer class="bg-gray-700 pb-2 pt-5 lg:pt-10">
	<div
		class:list={[
			'max-w-[var(--content-width-xl)] mx-auto flex flex-col gap-8 pt-9 px-4',
			'sm:pt-12 sm:px-10 sm:gap-10',
		]}
	>
		<!-- Logo -->
		<div class="logo">
			<Logo
				size="xl"
				href="/"
				context="header"
				priority={true}
				loading="eager"
			/>
		</div>

		<!-- Middle Content -->
		<div class="middle-content">
			<!-- Main Grid Container -->
			<div class="lg:grid lg:grid-cols-[2fr_1fr] lg:gap-12 lg:items-start">
				<!-- Footer Text -->
				<div
					class="wsl-text-lg max-w-[550px] text-gray-300 mb-8 sm:mb-10 lg:mb-0"
					set:html={footerText}
				/>

				<!-- Navigation & Company Info Container -->
				<div class="flex flex-col gap-8 sm:flex-row sm:gap-16">
					<!-- Navigation Links -->
					<div class="footerLinks flex flex-col gap-4 flex-1">
						<h4 class="text-lg uppercase text-primary-600 whitespace-nowrap">
							Quick Links
						</h4>
						<ul class="flex flex-col gap-1">
							{
								footerLinks.map((link) => (
									<li>
										<a
											href={link.href}
											class="capitalize text-gray-300 hover:text-primary-400 transition-colors wsl-text-lg font-semibold whitespace-nowrap"
										>
											{link.name}
										</a>
									</li>
								))
							}
						</ul>
					</div>

					<!-- Company Info -->
					<div class="footerLinks flex flex-col gap-4 flex-1">
						<h4 class="text-lg uppercase text-primary-600">Company</h4>
						<ul class="flex flex-col gap-1">
							{
								companyInfo.map((info) => (
									<li class="text-gray-300 wsl-text-lg font-semibold whitespace-nowrap">
										{info.value}
									</li>
								))
							}
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer Metadata (with proper spacing) -->
		<div
			class="meta flex flex-col-reverse sm:flex-row w-full justify-between items-center gap-2 pt-8 mt-8 border-t border-gray-700"
		>
			<p class="text-sm text-gray-500 !font-normal">
				Worksite Leads | All Rights Reserved.
			</p>
			<div class="text-sm text-gray-500">
				<a
					href=""
					class="hover:text-primary-400 transition-colors"
					>Terms of Use</a
				>
				<span> | </span>
				<a
					href=""
					class="hover:text-primary-400 transition-colors"
					>Privacy Policy</a
				>
			</div>
		</div>
	</div>
</footer>
