---
import Logo from '@/components/ui/media/LogoImage.astro';

const footerLinks = [
	{
		name: 'home',
		href: '/',
	},
	{
		name: 'Who We Help',
		href: '/who-we-help',
	},
	{
		name: 'Contact',
		href: '/contact',
	},
	{
		name: 'Schedule a Call',
		href: '/schedule-call',
	},
];

const serviceLinks = [
	{
		name: 'Website Development',
		href: '/web-development',
	},
	{
		name: 'AI Automation',
		href: '/ai-automation',
	},
	{
		name: 'Digital Marketing',
		href: '/digital-marketing',
	},
];

const companyInfo = [
	{
		name: 'email',
		value: 'contact@worksiteleads.com',
		href: 'mailto:contact@worksiteleads.com',
	},
	{
		name: 'number',
		value: '+1 (316) 330 - 4092',
		href: 'tel:+1(316)3304092',
	},
];

interface Props {
	footerText?: string;
}

const {
	footerText = 'Committed to providing businesses with innovative solutions that attract more clients, serve them better & keep them longer.',
} = Astro.props as Props;
---

<footer class="bg-gray-700 pb-2 pt-5 lg:pt-10">
	<div
		class:list={[
			'max-w-[var(--content-width-xl)] mx-auto flex flex-col gap-8 pt-9 px-4',
			'sm:pt-12 sm:px-10 sm:gap-10',
		]}
	>
		<!-- Logo -->
		<div class="logo">
			<Logo
				size="xl"
				href="/"
				context="header"
				priority={true}
				loading="eager"
			/>
		</div>

		<!-- Middle Content -->
		<div class="middle-content">
			<!-- Main Grid Container -->
			<div class="lg:grid lg:grid-cols-[2fr_1fr] lg:gap-12 lg:items-start">
				<!-- Footer Text -->
				<div
					class="wsl-text-sm max-w-[500px] text-gray-300 mb-8 sm:mb-10 lg:mb-0 lg:ml-2"
					set:html={footerText}
				/>

				<!-- Navigation & Company Info Container -->
				<div class="flex flex-col gap-8 sm:flex-row sm:gap-8 lg:gap-12">
					<!-- Navigation Links -->
					<div class="footerLinks flex flex-col gap-4 flex-1">
						<h4 class="text-lg uppercase text-primary-600 whitespace-nowrap">
							Quick Links
						</h4>
						<ul class="flex flex-col gap-1">
							{
								footerLinks.map((link) => (
									<li>
										<a
											href={link.href}
											class="capitalize text-gray-300 hover:text-primary-400 transition-colors wsl-text-sm font-semibold whitespace-nowrap"
										>
											{link.name}
										</a>
									</li>
								))
							}
						</ul>
					</div>

					<!-- Services Links -->
					<div class="footerLinks flex flex-col gap-4 flex-1">
						<h4 class="text-lg uppercase text-primary-600 whitespace-nowrap">
							Services
						</h4>
						<ul class="flex flex-col gap-1">
							{
								serviceLinks.map((service) => (
									<li>
										<a
											href={service.href}
											class="text-gray-300 hover:text-primary-400 transition-colors wsl-text-sm font-semibold whitespace-nowrap"
										>
											{service.name}
										</a>
									</li>
								))
							}
						</ul>
					</div>

					<!-- Company Info -->
					<div class="footerLinks flex flex-col gap-4 flex-1">
						<h4 class="text-lg uppercase text-primary-600">Company</h4>
						<ul class="flex flex-col gap-1">
							{
								companyInfo.map((info) => (
									<li>
										<a
											href={info.href}
											class="text-gray-300 hover:text-primary-400 transition-colors wsl-text-sm font-semibold whitespace-nowrap"
										>
											{info.value}
										</a>
									</li>
								))
							}
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer Metadata (with proper spacing) -->
		<div
			class="meta flex flex-col-reverse sm:flex-row w-full justify-between items-center gap-2 pt-8 mt-8 border-t border-gray-700"
		>
			<p class="text-sm text-gray-400 !font-normal">
				Worksite Leads | All Rights Reserved.
			</p>
			<div class="text-sm text-gray-400">
				<a
					href="/terms-of-use"
					class="hover:text-primary-400 transition-colors"
					>Terms of Use</a
				>
				<span> | </span>
				<a
					href="/privacy-policy"
					class="hover:text-primary-400 transition-colors"
					>Privacy Policy</a
				>
			</div>
		</div>
	</div>
</footer>
