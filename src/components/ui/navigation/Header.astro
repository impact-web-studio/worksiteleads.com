			<!-- Header logo - prioritized, eager loading -->
			<Logo
				size="md"
				href="/"
				context="header"
				priority={true}
				loading="eager"
			/>

			<!-- Navigation items -->
			<nav>
				<!-- Your navigation items -->
			</nav>
		</div>
	</div>
</header>
