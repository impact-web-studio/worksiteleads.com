---
import Logo from '@/components/ui/media/LogoImage.astro';

const navigationLinks = [
	{
		name: 'home',
		path: '/',
	},
	{
		name: 'about',
		path: '/about',
	},
	{
		name: 'services',
		path: '/services',
	},
	{
		name: 'Who We Help',
		path: '/who-we-help',
	},
