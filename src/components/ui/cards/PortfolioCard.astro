---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	image: ImageMetadata;
	href: string;
	class: string;
}
const {
	title,
	description,
	image,
	href,
	class: className,
} = Astro.props as Props;
---

<article class={`group hover ${className}`}>
	<a
		href={href}
		class="w-full h-full"
		target="_blank"
	>
		<div class="flex flex-col gap-2 h-full">
			<div
				class="image-container transition-transform duration-800 ease-out group-hover:scale-108 flex justify-center"
			>
				<Image
					src={image}
					alt={`${title} preview`}
					class="w-full h-auto max-w-md object-contain"
				/>
			</div>

			<div class="flex flex-col gap-4 flex-1 text-left">
				<div class="flex flex-col gap-2 flex-1">
					<h3
						class="text-gray-200 wsl-text-lg"
						set:html={title}
					/>
					<p
						class="text-gray-200 text-sm"
						set:html={description}
					/>
				</div>
				<p class="text-primary-500 !font-bold text-sm mt-auto">Visit Website</p>
			</div>
		</div>
	</a>
</article>
