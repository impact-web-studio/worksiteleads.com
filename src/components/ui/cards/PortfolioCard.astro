---
import { Image } from 'astro:assets';
interface Props {
	title: string;
	description: string;
	image: ImageMetadata;
	href: string;
	class: string;
}
const {
	title,
	description,
	image,
	href,
	class: className,
} = Astro.props as Props;
---

<article class={className}>
	<a
		href={href}
		class="w-full h-full"
	>
		<div class="flex flex-col gap-6">
			<Image
				src={image}
				alt={`${title} preview`}
				<h3
				set:html={title}
			/>
			<div class="flex flex-col gap-10">
				<p
					class="text-gray-200 text-sm"
					set:html={description}
				/>
				<p class="text-primary-500 font-semibold text-sm">Visit Website</p>
			</div>
		</div>
	</a>
</article>
