---
import QuotationIcon from '@/assets/icons/Quotation.astro';
interface Props {
	client: string;
	review: string;
	class?: string;
}

const { client, review, class: className } = Astro.props as Props;
---

<article
	class={`flex flex-col bg-gray-200 rounded-lg gap-3 p-5 h-full ${className}`}
>
	<QuotationIcon class="text-gray-300" />
	<div class="flex flex-col gap-8 flex-grow">
		<blockquote
			class="relative text-xs sm:text-sm md:text-base flex-grow"
			set:html={review}
		/>
		<div>
			<p
				class="uppercase text-normal sm:text-lg !font-extrabold !font-montserrat tracking-tight"
				set:html={client}
			/>
			<!-- <p class="uppercase text-sm sm:text-md font-black font-montserrat">
				Manitoba, ON
			</p> -->
		</div>
	</div>
</article>
