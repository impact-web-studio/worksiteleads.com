---
import QuotationIcon from '@/assets/icons/Quotation.astro';
interface Props {
	client: string;
	review: string;
	class?: string;
}

const { client, review, class: className } = Astro.props as Props;
---

<article class={`flex flex-col bg-gray-200 rounded-lg p-5 ${className}`}>
	<QuotationIcon />
	<blockquote
		class="relative text-xs sm:text-sm md:text-base"
		set:html={review}
	/>
	<p
		class="uppercase text-lg sm:text-xl font-black font-montserrat tracking-tight"
		set:html={client}
	/>
</article>
