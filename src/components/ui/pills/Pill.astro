---
interface Props {
	hasIcon?: boolean;
	text: string;
}

const { hasIcon = true, text = 'placeholder text' } = Astro.props as Props;
---

<div
	class={`flex items-center bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 w-full sm:w-fit`}
>
	{
		hasIcon && (
			<svg
				class="w-4 h-4 text-primary-500 mr-2"
				fill="currentColor"
				viewBox="0 0 20 20"
			>
				<path
					fill-rule="evenodd"
					d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
					clip-rule="evenodd"
				/>
			</svg>
		)
	}
	<span
		class="text-white text-sm font-medium"
		set:html={text}
	/>
</div>
