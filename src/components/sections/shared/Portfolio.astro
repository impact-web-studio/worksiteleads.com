---
import SectionContainer from './SectionContainer.astro';
import PortfolioCard from '@/components/ui/cards/PortfolioCard.astro';
// Image Imports

import placeHolderImage from '@/assets/tmp.avif';

type Project = {
	title: string;
	description: string;
	image: ImageMetadata;
	href: string;
};

const projects: Project[] = [
	{
		title: 'Company Name',
		description:
			'Short description of the company. But not too short or it looks weird.',
		image: placeHolderImage,
		href: '/',
	},
	{
		title: 'Company Name',
		description: 'Short description of the company',
		image: placeHolderImage,
		href: '/',
	},
	{
		title: 'Company Name',
		description: 'Short description of the company',
		image: placeHolderImage,
		href: '/',
	},
];

interface Props {
	title?: string;
	subtitle?: string;
}

const {
	title = 'Recent Works',
	subtitle = "We've had the privilege of working with a wide range of clients from across North America â€” Our websites are more than just pretty designs; they're built to drive results.",
} = Astro.props as Props;
---

<SectionContainer
	title={title}
	subtitle={subtitle}
	backgroundColor="bg-gray-700"
	headerColor="text-primary-500"
	textColor="text-gray-200"
>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		{
			projects.map((project) => (
				<PortfolioCard
					title={project.title}
					description={project.description}
					image={project.image}
					href={project.href}
					class=""
				/>
			))
		}
	</div>
</SectionContainer>
