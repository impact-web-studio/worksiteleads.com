];

interface Props {
	title?: string;
	subtitle?: string;
}

const {
	title = 'Reviews',
	subtitle = 'Trusted by industry leaders to take their businesses to the next level',
} = Astro.props as Props;
---

<SectionContainer
	title={title}
	subtitle={subtitle}
>
	<div class="portfolio-card-group flex flex-wrap justify-center gap-5">
		{
			testimonials.map((testimonial) => (
				<TestimonialCard
					client={testimonial.client}
					review={testimonial.review}
					class={`grow w-full min-w-[280px] max-w-[600px] lg:max-w-[45%] xl:max-w-[32%]`}
				/>
			))
		}
