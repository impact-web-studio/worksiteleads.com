---
// Hero.astro
import { Image } from 'astro:assets';
import heroBg from '@/assets/home-banner-bg.png';
import Pill from '@/components/ui/pills/Pill.astro';

interface Props {
	title?: string;
	subtitle?: string;
	bodyText?: string;
	listItems?: string[];
	videoId?: string; // YouTube video ID
	ctaText?: string;
	ctaHref?: string;
}

const {
	title = 'Welcome to Our Company',
	subtitle = 'We create amazing experiences that drive results',
	bodyText = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.',
	listItems = [
		'Full Website Designs',
		'Lead Generation & Follow-up Automations',
		' No Technical Skills or Marketing Experience Needed',
	],
	videoId = 'dQw4w9WgXcQ', // Replace with your actual YouTube video ID

	ctaText = 'Get Started',
	ctaHref = '/contact',
} = Astro.props;
---

<section class="relative overflow-hidden">
	<!-- Background Image -->
	<div class="absolute inset-0 z-0">
		<Image
			src={heroBg}
			alt=""
			class="w-full h-full object-fill object-top min-h-full lg:w-full"
			loading="eager"
			fetchpriority="high"
			format="webp"
			quality={90}
			densities={[1, 2]}
		/>
		<!-- Overlay -->
		<div class="absolute inset-0 bg-black/40"></div>
	</div>

	<!-- Content Container -->
	<div class="content-container relative z-10 min-h-screen">
		<!-- Main Content Area -->
		<div class="flex flex-col gap-5 pt-32">
			<div class="flex flex-col gap-5 text-center">
				<!-- Main Heading -->
				<h1
					class="heading-l1 text-white"
					set:html={title}
				/>

				<!-- Subtitle -->
				<h2
					class="hero-subtitle text-primary-500"
					set:html={subtitle}
				/>
			</div>
			<!-- Decorative List Items -->
			<div class="flex flex-wrap sm:justify-center gap-4">
				{listItems.map((item) => <Pill text={item} />)}
			</div>

			<!-- CTA Button -->
			<div class="pt-8 flex gap-3 items-center justify-center">
				<a
					href={ctaHref}
					class="inline-flex items-center px-8 py-4 text-lg font-semibold text-black bg-primary-500 rounded-lg hover:bg-primary-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
				>
					{ctaText}
					<!-- <svg
                            class="ml-2 w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"
                            ></path>
                        </svg> -->
				</a>
				<a class="text-white font-semibold text-lg hover:underline"
					>Learn More</a
				>
			</div>
		</div>

		<!-- Video Section - Positioned to hang off background -->
		<div class="relative z-20 px-4 sm:px-6 lg:px-8 pb-20">
			<div class="mx-auto">
				<div
					class="relative bg-black rounded-2xl shadow-2xl overflow-hidden transform translate-y-16"
				>
					<!-- Video Embed -->
					<div class="aspect-video">
						<iframe
							class="w-full h-full"
							src={`https://www.youtube.com/embed/${videoId}?rel=0&showinfo=0&modestbranding=1`}
							title="Company Overview Video"
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen
							loading="lazy"
						></iframe>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
