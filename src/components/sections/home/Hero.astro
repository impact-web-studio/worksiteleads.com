---
// Hero.astro
import { Image } from 'astro:assets';
import heroBg from '@/assets/home-banner-bg.png';

interface Props {
	title?: string;
	subtitle?: string;
	bodyText?: string;
	listItems?: string[];
	videoId?: string; // YouTube video ID
	ctaText?: string;
	ctaHref?: string;
}

const {
	title = 'Welcome to Our Company',
	subtitle = 'We create amazing experiences that drive results',
	bodyText = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.',
	listItems = [
		'Full Website Designs',
		'Lead Generation & Follow-up Automations',
		' No Technical Skills or Marketing Experience Needed',
	],
	videoId = 'dQw4w9WgXcQ', // Replace with your actual YouTube video ID

	ctaText = 'Get Started',
	ctaHref = '/contact',
} = Astro.props;
---

<section class="relative overflow-hidden">
	<!-- Background Image -->
	<div class="absolute inset-0 z-0">
		<Image
			src={heroBg}
			alt=""
			class="w-full h-full object-fill object-top min-h-full lg:w-full"
			loading="eager"
			fetchpriority="high"
			format="webp"
			quality={90}
			densities={[1, 2]}
		/>
		<!-- Overlay -->
		<div class="absolute inset-0 bg-black/40"></div>
	</div>

	<!-- Content Container -->
	<div class="relative z-10 min-h-screen">
		<!-- Main Content Area -->
		<div class="pt-32">
			<div
				class="max-w-content-width-xl mx-auto px-4 sm:px-6 lg:px-8 text-center"
			>
				<div class="space-y-8">
					<!-- Main Heading -->
					<h1
						class="heading-l1 font-bold text-white leading-tight"
						set:html={title}
					/>

					<!-- Subtitle -->
					<h2
						class="hero-subtitle text-primary-500 text-center"
						set:html={subtitle}
					/>

					<!-- Body Text -->
					<p
						class="wsl-text-lg text-gray-300"
						set:html={bodyText}
					/>

					<!-- Decorative List Items -->
					<div class="flex flex-wrap justify-center gap-4 pt-6">
						{
							listItems.map((item) => (
								<div class="flex items-center bg-white/10 backdrop-blur-sm rounded-full px-4 py-2">
									<svg
										class="w-4 h-4 text-primary-500 mr-2"
										fill="currentColor"
										viewBox="0 0 20 20"
									>
										<path
											fill-rule="evenodd"
											d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
											clip-rule="evenodd"
										/>
									</svg>
									<span class="text-white text-sm font-medium">{item}</span>
								</div>
							))
						}
					</div>

					<!-- CTA Button -->
					<div class="pt-8 flex gap-3 items-center justify-center">
						<a
							href={ctaHref}
							class="inline-flex items-center px-8 py-4 text-lg font-semibold text-black bg-primary-500 rounded-lg hover:bg-primary-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
						>
							{ctaText}
							<!-- <svg
								class="ml-2 w-5 h-5"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M9 5l7 7-7 7"
								></path>
							</svg> -->
						</a>
						<a class="text-white font-semibold text-lg hover:underline"
							>Learn More</a
						>
					</div>
				</div>
			</div>
		</div>

		<!-- Video Section - Positioned to hang off background -->
		<div class="relative z-20 px-4 sm:px-6 lg:px-8 pb-20">
			<div class="mx-auto">
				<div
					class="relative bg-black rounded-2xl shadow-2xl overflow-hidden transform translate-y-16"
				>
					<!-- Video Embed -->
					<div class="aspect-video">
						<iframe
							class="w-full h-full"
							src={`https://www.youtube.com/embed/${videoId}?rel=0&showinfo=0&modestbranding=1`}
							title="Company Overview Video"
							frameborder="0"
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
							allowfullscreen
							loading="lazy"
						></iframe>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
