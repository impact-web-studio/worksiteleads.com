---
import SectionContainer from '../shared/SectionContainer.astro';
import ServiceCard from '@/components/ui/cards/ServiceCard.astro';

import WebDesignImage from '@/assets/web-development.png';
import AIAutomation from '@/assets/ai-automation.png';
import DigitalMarketingImage from '@/assets/digital-marketing.png';

type Service = {
	id: string;
	title: string;
	description: string;
	image: ImageMetadata;
	imageAlt: string;
	href: string;
	variation: '1' | '2' | '3';
};

const services: Service[] = [
	{
		id: 'web-design',
		title: 'Web Design & Development',
		description:
			'Custom websites that are fast, responsive, and optimized for conversions. We create digital experiences that engage your audience and drive results.',
		image: WebDesignImage,
		imageAlt: 'Modern web design showcase on multiple devices',
		href: '/services/web-design',
		variation: '1',
	},
	{
		id: 'ai-automation',
		title: 'AI Automation',
		description:
			"Automate the tedious task so that you can focus on what matters most - finishing jobs, and spending the extra time however you'd like",
		image: AIAutomation,
		imageAlt: 'AI Automation tools',
		href: '/services/ai-automation',
		variation: '2',
	},
	{
		id: 'digital-marketing',
		title: 'Digital Marketing',
		description:
			'Strategic marketing campaigns that reach your target audience across all digital channels. From SEO to social media, we drive qualified traffic to your business.',
		image: DigitalMarketingImage,
		imageAlt: 'Digital marketing analytics and social media dashboard',
		href: '/services/digital-marketing',
		variation: '3',
	},
];

interface Props {
	title?: string;
	subtitle?: string;
	className?: string;
}

const {
	title = 'All-in-One Digital Packages',
	subtitle = 'more than just websites, we offer all-in-one packages designed to help you manage and grow your business',
} = Astro.props as Props;
---

<SectionContainer
	title={title}
	subtitle={subtitle}
	centerHeader={true}
>
	<div class="grid grid-cols-1 gap-8 lg:gap-12">
		{
			services.map((service) => (
				<ServiceCard
					title={service.title}
					description={service.description}
					image={service.image}
					imageAlt={service.imageAlt}
					href={service.href}
					variation={service.variation}
				/>
			))
		}
	</div>
</SectionContainer>
