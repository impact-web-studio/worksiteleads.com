---
const { class: className } = Astro.props;
---

<article
	class:list={[
		'prose prose-neutral max-w-none',
		'prose-h1:font-montserrat prose-h1:font-bold prose-h1:text-5xl prose-h1:!mt-12 prose-h1:!mb-6',
		'prose-h2:font-montserrat prose-h2:font-semibold prose-h2:text-2xl prose-h2:!mt-8 prose-h2:!mb-4',
		'prose-h3:font-montserrat prose-h3:font-medium prose-h3:text-xl prose-h3:!mt-6 prose-h3:!mb-3',
		'prose-p:font-manrope prose-p:text-base prose-p:leading-relaxed prose-p:!my-6 prose-p:text-left',
		'prose-a:font-manrope prose-a:text-accent-500 prose-a:hover:underline prose-a:font-medium',
		'prose-ul:font-manrope prose-ul:pl-6 prose-ul:!my-6 prose-ul:list-disc',
		'prose-ol:font-manrope prose-ol:pl-6 prose-ol:!my-6 prose-ol:list-decimal',
		'prose-img:rounded-xl prose-img:!my-6',
		'my-12 px-4 sm:px-8 md:px-16 lg:px-24', // article padding/margin
		className,
	]}
>
	<slot />
</article>
