---
import '@/styles/custom-styles.css';
import '@/styles/global.css';
import '@/styles/fluid-typography.css';
import '@/styles/fluid-layouts.css';
// Layout.astro
import Header from '@/components/ui/navigation/Header.astro';
import Footer from '@/components/ui/navigation//Footer.astro';

interface Props {
	title?: string;
	description?: string;
	hasHero?: boolean; // Flag to indicate if page has hero section
}

const {
	title = 'Worksite Leads',
	description = 'Your description',
	hasHero = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content={description}
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<title>{title}</title>
	</head>
	<body class="font-sans antialiased">
		<!-- Header with conditional styling for hero pages -->
		<Header isOverlay={hasHero} />

		<!-- Main content -->
		<main class={hasHero ? 'relative' : ''}>
			<slot />
		</main>

		<Footer
			footerText="Committed to providing businesses with innovative solutions that - Attract More Clients, Serve Them Better & Keep Them Longer."
		/>
	</body>
</html>
