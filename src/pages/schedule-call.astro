---
// Layout
import Layout from '@/layouts/Layout.astro';
// Sections
import SubPageHero from '@/components/sections/shared/SubPageHero.astro';
import Testimonials from '@/components/sections/shared/Testimonials.astro';
import Portfolio from '@/components/sections/shared/Portfolio.astro';
import CTA from '@/components/sections/shared/CTA.astro';
---

<Layout
	hasHero={true}
	title="Schedule a Call - Worksite Leads"
	description="Schedule a call with our team to discover how we can help your business grow."
>
	<SubPageHero
		eyebrow="Ready to Start?"
		title="Schedule a Call"
		description="Hop on a quick & easy, no risks, no obligations call with us to see how we can help."
		class=""
		layout="vertical"
	>
		<div
			slot="after-content"
			class="w-full h-fit overflow-hidden"
		>
			<iframe
				src="https://api.leadconnectorhq.com/widget/form/oRpwRtJKwrjYlDzyxKA3"
				style="width:100%;height:100%;border:none;border-radius:16px;overflow-y: scroll;"
				id="inline-oRpwRtJKwrjYlDzyxKA3"
				data-layout="{'id':'INLINE'}"
				data-trigger-type="alwaysShow"
				data-trigger-value=""
				data-activation-type="alwaysActivated"
				data-activation-value=""
				data-deactivation-type="neverDeactivate"
				data-deactivation-value=""
				data-form-name="Website Demo Call Calendar form"
				data-height="624"
				data-layout-iframe-id="inline-oRpwRtJKwrjYlDzyxKA3"
				data-form-id="oRpwRtJKwrjYlDzyxKA3"
				title="Website Demo Call Calendar form"
			>
			</iframe>
		</div>
	</SubPageHero>
	<Testimonials backgroundColor="bg-gray-50" />
	<Portfolio />
	<CTA />
</Layout>

<script
	src="https://link.msgsndr.com/js/form_embed.js"
	type="text/javascript"
></script>
