---
// Layout
import Layout from '@/layouts/Layout.astro';
import Head from '@/components/Head.astro';
// Sections
import SubPageHero from '@/components/sections/shared/SubPageHero.astro';
import ValueProposition from '@/components/sections/shared/ValueProposition.astro';
import Benefits from '@/components/sections/shared/Benefits.astro';
import ExtraServices from '@/components/sections/home/ExtraServices.astro';
import CTA from '@/components/sections/shared/CTA.astro';
import ButtonGroup from '@/components/groups/ButtonGroup.astro';

// Images & Media
import Image1 from '@/assets/PremierRenovations.png';
import Image2 from '@/assets/OakridgeRenovations.png';
import Image3 from '@/assets/Elevate.png';

const meta = {
	title: 'Worksite Leads | AI Automation for Contractors',
	description:
		'Automate your contractor business with AI chatbots, lead capture, and review systems to save time and boost efficiency in the US and Canada.',
	keywords: [
		'AI automation for contractors',
		'AI chatbot for tradesmen',
		'contractor automation solutions',
		'automated review system contractors',
		'lead capture automation Wichita',
	],
	url: 'https://worksiteleads.com/ai-automation',
	image: '/worksiteleads-logo.webp',
	robots: 'index, follow',
	schema: {
		'@context': 'https://schema.org',
		'@type': 'Service',
		serviceType: 'AI Automation',
		provider: {
			'@type': 'LocalBusiness',
			name: 'Worksite Leads',
			url: 'https://worksiteleads.com',
			email: 'contact@worksiteleads.com',
			logo: 'https://worksiteleads.com/worksiteleads-logo.webp',
		},
		areaServed: [
			{ '@type': 'Country', name: 'United States' },
			{ '@type': 'Country', name: 'Canada' },
		],
		description:
			'AI automation solutions for tradesmen and contractors to streamline lead capture, reviews, and workflows.',
		offers: {
			'@type': 'Offer',
			url: 'https://worksiteleads.com/ai-automation',
			priceCurrency: 'USD',
			itemOffered: {
				'@type': 'Service',
				name: 'AI Automation for Contractors',
				description:
					'Custom AI chatbots, lead capture, and review automation for tradesmen.',
			},
		},
	},
};
---

<Layout
	hasHero={true}
	title={meta.title}
	description={meta.description}
>
	<Head {...meta} />
	<SubPageHero
		eyebrow="Built to Save You Time and Effort"
		title="AI Automation"
		description="You wear a lot of hats. AI helps you wear fewer. Reduce your admin load with our custom AI automations.<br><br>Built to handle the repetitive stuff — from sending reminders and collecting reviews to organizing your leads and messages — so you can reclaim back more of your time."
		class=""
		hasHeroImage={false}
	>
		<ButtonGroup
			slot="after-description"
			learnMoreHref="#valueProp"
		/>
	</SubPageHero>
	<ValueProposition
		title="Get More Done Without Doing More"
		subtitle="Your Time Should Go Where It Counts"
		body="The businesses that grow are the ones that follow up fast, stay organized, and deliver a consistent experience every time. That's exactly what automation gives you — without changing how you work. <br><br>We set up simple, powerful systems that handle your follow-ups, messages, and client reminders in the background, so you can stay focused on doing great work while the rest handles itself."
		sectionId={'valueProp'}
	/>
	<Benefits
		subtitle="Smart Tools for Busy People"
		title="The Automation Behind Smoother Operations"
		benefits={[
			{
				title: 'Never Miss Another Lead',
				description:
					"When someone reaches out, time matters. Our AI chat and lead capture automations respond instantly — even after hours — so you're not losing work while you're on the job. <ol class='text-gray-200 wsl-text-sm font-semibold'>Key Benefits: <li>1. Instant replies to new inquiries</li> <li>2. Fewer missed opportunities</li><li> 3. Book jobs while you sleep</li></ol>",
				image: Image1,
				imageAlt: 'AI lead capture automation for contractors',
			},
			{
				title: 'Get More Reviews Without Chasing Clients',
				description:
					'After you finish a job, the last thing on your list is asking for a review. We automate that process, sending smart, friendly follow-ups that get you more 5-star reviews on Google and boost your local visibility. <ol class="text-gray-200 wsl-text-sm font-semibold">Key Benefits: <li>1. Review requests go out automatically</li> <li>2. More social proof, higher ranking</li><li> 3. Strengthen your Google Business Profile</li></ol>',
				image: Image2,
				imageAlt: 'Automated review system for contractors',
				reverse: true,
			},
			{
				title: "Systems That Work While You're Working",
				description:
					"Even when you're on-site or off the clock, your business keeps moving. We automate key touchpoints in your workflow — so leads stay warm, clients stay informed, and nothing gets forgotten. <ol class='text-gray-200 wsl-text-sm font-semibold'>Key Benefits: <li>1. Automatic follow-ups and task reminders</li> <li>2. Keep jobs on track without micromanaging</li><li> 3. Less time spent checking in or chasing down info</li></ol>",
				image: Image3,
				imageAlt: 'Workflow automation for tradesmen',
			},
		]}
	/>
	<ExtraServices />
	<CTA />
</Layout>
