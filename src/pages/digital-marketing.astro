---
// Layout
import Layout from '@/layouts/Layout.astro';
import Head from '@/components/Head.astro';
// Sections
import SubPageHero from '@/components/sections/shared/SubPageHero.astro';
import ValueProposition from '@/components/sections/shared/ValueProposition.astro';
import Benefits from '@/components/sections/shared/Benefits.astro';
import ExtraServices from '@/components/sections/home/ExtraServices.astro';
import CTA from '@/components/sections/shared/CTA.astro';
import ButtonGroup from '@/components/groups/ButtonGroup.astro';

// Images & Media
import Image1 from '@/assets/PremierRenovations.png';
import Image2 from '@/assets/OakridgeRenovations.png';
import Image3 from '@/assets/Elevate.png';

const meta = {
	title: 'Worksite Leads | Digital Marketing for Tradesmen',
	description:
		'Boost your contractor business with local SEO, Google Ads, and automated reviews to rank higher and get more leads in the US and Canada.',
	keywords: [
		'tradesmen digital marketing',
		'local SEO for contractors',
		'Google Ads for tradesmen',
		'automated review system contractors',
		'contractor retargeting ads',
	],
	url: 'https://worksiteleads.com/digital-marketing',
	image: '/worksiteleads-logo.webp',
	robots: 'index, follow',
	schema: {
		'@context': 'https://schema.org',
		'@type': 'Service',
		serviceType: 'Digital Marketing',
		provider: {
			'@type': 'LocalBusiness',
			name: 'Worksite Leads',
			url: 'https://worksiteleads.com',
			email: 'contact@worksiteleads.com',
			logo: 'https://worksiteleads.com/worksiteleads-logo.webp',
		},
		areaServed: [
			{ '@type': 'Country', name: 'United States' },
			{ '@type': 'Country', name: 'Canada' },
		],
		description:
			'Digital marketing and local SEO for tradesmen to drive leads through Google Ads, retargeting, and automated reviews.',
		offers: {
			'@type': 'Offer',
			url: 'https://worksiteleads.com/digital-marketing',
			priceCurrency: 'USD',
			itemOffered: {
				'@type': 'Service',
				name: 'Digital Marketing for Tradesmen',
				description:
					'Local SEO, Google Ads, and review automation to attract and convert leads for contractors.',
			},
		},
		sameAs: [
			'https://www.facebook.com/worksiteleads',
			'https://instagram.com/worksiteleads',
		],
	},
};
---

<Layout
	hasHero={true}
	title={meta.title}
	description={meta.description}
>
	<Head {...meta} />
	<SubPageHero
		eyebrow="Get Seen. Get Hired."
		title="Digital Marketing"
		description="People can't hire you if they can't find you. We help you show up on Google, rank higher in Maps, and get seen by locals who are ready to book. <br><br>More visibility means more calls — and more jobs on your calendar."
		class=""
		hasHeroImage={false}
	>
		<ButtonGroup
			slot="after-description"
			learnMoreHref="#valueProp"
		/>
	</SubPageHero>
	<ValueProposition
		title="Get in Front of the Right People at the Right Time"
		subtitle="Visibility Alone Isn't Enough"
		body="Getting found is just the start. We help you turn those clicks into real work — with strategies built to attract the right customers, earn their trust, and convert them into booked jobs.<br><br>From high-converting landing pages to automated review requests, we make every part of your online presence work harder for you — so your calendar stays full, and your marketing finally pays off."
		sectionId={'valueProp'}
	/>
	<Benefits
		subtitle="More Traffic Only Matters if It Converts"
		title="Digital Strategy Designed for Trades"
		benefits={[
			{
				title: 'Draw In New Customers with Every 5-Star Review',
				description:
					'Word of mouth is great—but online reviews are the new handshake. We help you request reviews automatically, right when customers are happiest. With every new review, your business climbs higher in search results, earns more clicks, and closes more jobs.',
				image: Image1,
				imageAlt: 'Automated review system for contractors',
			},
			{
				title: 'Retargeting Ads',
				description:
					"People dont always book the first time they visit your site. Retargeting ads bring them back when they're ready to buy. <ol class='text-gray-200 wsl-text-sm font-semibold'>Key Benefits: <li>1. Bring back high-intent visitors</li> <li>2. Increase conversion rates from traffic you already paid for</li><li> 3. Stay top-of-mind without spamming</li></ol>",
				image: Image2,
				imageAlt: 'Retargeting ads for tradesmen',
				reverse: true,
			},
			{
				title: 'Only Pay for Clicks That Turn Into Jobs',
				description:
					"We set up and manage targeted Google Ads that drive real leads, not just clicks. No bloated budgets, just calls from people ready to hire. <ol class='text-gray-200 wsl-text-sm font-semibold'>Key Benefits: <li>1. Higher quality leads from paid traffic</li> <li>2. Lower cost-per-click with better targeting</li><li> 3. More control over when and how jobs come in</li></ol>",
				image: Image3,
				imageAlt: 'Google Ads for contractors',
			},
		]}
	/>
	<ExtraServices />
	<CTA />
</Layout>
