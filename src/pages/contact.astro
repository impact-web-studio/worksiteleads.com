---
// Layout
import Layout from '@/layouts/Layout.astro';
// Sections
import SubPageHero from '@/components/sections/shared/SubPageHero.astro';
import Testimonials from '@/components/sections/shared/Testimonials.astro';
import Portfolio from '@/components/sections/shared/Portfolio.astro';
import CTA from '@/components/sections/shared/CTA.astro';
// Components
import ListItem from '@/components/ui/ListItem.astro';

type Contact = {
	name: string;
	value: string;
	href?: string;
};

const contactInfo: Contact[] = [
	{
		name: 'number',
		value: '+1 (123) - 1234',
		href: 'tel:+11231234',
	},
	{
		name: 'email',
		value: 'contact@worksiteleads.com',
		href: 'mailto:contact@domain.com',
	},
	{
		name: 'hours',
		value: '24/7',
	},
];
---

<Layout
	hasHero={true}
	title="Contact Page - Worksite Leads"
	description="Contact us with any questions or general inquiries."
>
	<SubPageHero
		eyebrow="Got Questions?"
		title="Contact Us"
		description="We are dedicated to providing exceptional support to ensure your experience with our products & services is seamless. <br><br>Our support team is here to assist you with any queries or issues you may encounter."
		isContactPage={true}
	>
		<div
			slot="list-items"
			class="flex flex-col gap-1"
		>
			{
				contactInfo.map((contact) =>
					contact.href ? (
						<a
							href={contact.href}
							target="_blank"
							rel="noopener noreferrer"
							class="hover:text-primary-500"
						>
							<ListItem text={contact.value} />
						</a>
					) : (
						<ListItem text={contact.value} />
					)
				)
			}
		</div>
		<div
			slot="form"
			class="w-full h-fit overflow-hidden"
		>
			<iframe
				src="https://api.leadconnectorhq.com/widget/form/DPgVyelrIJzLsRjld3cF"
				style="width:100%;height:100%;border:none;border-radius:4px"
				id="inline-DPgVyelrIJzLsRjld3cF"
				data-layout="{'id':'INLINE'}"
				data-trigger-type="alwaysShow"
				data-trigger-value=""
				data-activation-type="alwaysActivated"
				data-activation-value=""
				data-deactivation-type="neverDeactivate"
				data-deactivation-value=""
				data-form-name="Contact Us"
				data-height="481"
				data-layout-iframe-id="inline-DPgVyelrIJzLsRjld3cF"
				data-form-id="DPgVyelrIJzLsRjld3cF"
				title="Contact Us"
			>
			</iframe>
		</div>
	</SubPageHero>
	<Testimonials />
	<Portfolio />
	<CTA />
</Layout>

<script src="https://link.msgsndr.com/js/form_embed.js"></script>
